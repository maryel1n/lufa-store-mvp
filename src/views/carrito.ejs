<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>
<body>
<%- include('partials/navbar') %>

<div class="main-content">
    <div class="container my-5">
        <h3 class="mb-4">Carrito de compras</h3>
        <div class="row gy-5">
            <!-- Lista de productos -->
            <div class="col-lg-8">
                <div id="carrito-lista"></div>
            </div>
            <!-- Resumen del carrito -->
            <div class="col-lg-4">
                <div class="card p-4 shadow-sm border-1">
                    <h5 class="mb-3">Resumen del Carrito</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span id="subtotalCarrito">$0</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Envío:</span>
                        <span id="envioCarrito">$0</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between fw-bold fs-5">
                        <span>Total:</span>
                        <span id="totalCarrito">$0</span>
                    </div>
                    <div class="mt-3">
                        <a id="link-finalizar" href="/checkout" class="btn btn-dark w-100">Finalizar Compra</a>
                    </div>
                    <div class="mt-3">
                        <label for="codigoCupon" class="form-label mb-1">Código de Cupón</label>
                        <div class="input-group">
                            <input id="codigoCupon" type="text" class="form-control">
                            <button class="btn btn-outline-secondary" type="button">Aplicar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
<script src="/js/bootstrap.bundle.min.js"></script>
<script src="/js/carrito.js"></script>
</body>
</html>